@startuml
'https://plantuml.com/sequence-diagram
!include ../../Style.puml

autonumber

title Sequence Diagram of `workout /new` Command

participant "werkIt:WerkIt" AS WerkIt
participant "parser:Parser" AS Parser
participant "newCommand\n:WorkoutCommand" AS newCommand
participant "workoutList\n:WorkoutList" AS WorkoutList
participant "fileManager:FileManager" as FileManager

activate WerkIt

ref over WerkIt
Obtain user input.
end

WerkIt -> Parser : parseUserInput(userInput)
activate Parser
WerkIt <-- Parser : :Command
deactivate Parser

WerkIt -> newCommand : execute()
activate newCommand
newCommand -> WorkoutList : createAndAddWorkout(userArguments)
activate WorkoutList
ref over WorkoutList
Create new Workout
and add it to list.
end
newCommand <-- WorkoutList : "newWorkout:Workout"
deactivate WorkoutList

ref over newCommand
Print on terminal that new
workout is created.
end

newCommand -> FileManager : writeNewWorkoutToFile(newWorkout)
activate FileManager
ref over FileManager
Write new Workout data
into file on user's system.
end
newCommand <-- FileManager
deactivate FileManager

WerkIt <-- newCommand
deactivate newCommand

destroy newCommand
@enduml